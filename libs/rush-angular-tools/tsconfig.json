{
   "$schema": "http://json.schemastore.org/tsconfig",
   "compilerOptions": {
      "outDir": "lib",
      "rootDirs": [
         "src/"
      ],
      "types": [
         "node"
      ],
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "sourceMap": true,
      "declarationMap": true,
      "inlineSources": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "strict": true,
      "esModuleInterop": true,
      "module": "commonjs",
      "target": "es2017",
      "lib": [
         "es2017"
      ]
   },
   "include": [
      "src/**/*.ts"
   ],
   "exclude": [
      "node_modules",
      "lib"
   ]
}